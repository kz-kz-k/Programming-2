#include <stdio.h>

int main()
{
    int num;

    printf("Enter any number: ");
    scanf("%d", &num);

    switch (num > 0)
    {
        //// POSITIVE
        case 1:
            printf("%d is a positive number.", num);
        break;

        //// NEGATIVE
        case 0:
            switch (num < 0)
            {
                case 1:
                    printf("%d is a negative number.", num);
                    break;
                case 0:
                    printf("The inputted data is invalid. ", num);
                    break;
            }
        break;
    }

    return 0;
}
